@model Genealogie.ASP.Models.FormBlocageArbre

@{
    ViewBag.Title = "Bloquer";
}

<h2>Bloquer</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>FormBlocageArbre</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    <div class="form-group">
        @Html.LabelFor(model => model.blocages, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.idBlocage, new SelectList(Model.blocages, "id", "nom"), htmlAttributes: new { @class = "form-control", @id = "Blocage" })
            
            @Html.ValidationMessageFor(model => model.idBlocage, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
