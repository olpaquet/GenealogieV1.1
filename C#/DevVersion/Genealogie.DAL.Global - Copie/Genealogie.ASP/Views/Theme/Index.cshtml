@model IEnumerable<Genealogie.ASP.Models.ThemeIndex>

@{
    ViewBag.Title = "Liste des Thèmes";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Créer un nouveau thème", "Creer")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.titre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.actif)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.titre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.actif)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Modifier", new { id=item.id }) |
            @Html.ActionLink("Détails", "Details", new { id=item.id }) |
            @Html.ActionLink("Supprimer", "Supprimer", new { id=item.id })
        </td>
    </tr>
}

</table>
